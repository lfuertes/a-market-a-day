rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir lectura a cualquier usuario autenticado (incluyendo anónimos)
    // Pero prohibir explícitamente la escritura desde el cliente
    match /dailyMarkets/{marketId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // El resto de la base de datos permanece bloqueada por defecto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
